#!name=Adguard

[General]
bypass-system = true
skip-proxy = localhost, *.local
dns-server = system
ipv6 = false

[Script]
Adguard = type=http-response, pattern=^https:\/\/mobile-api\.adguard\.org\/api\/.+\/ios_validate_receipt\/(.*?), enable=true, script-path=https://raw.githubusercontent.com/monn1ka/Shadow/refs/heads/main/Adguard.js, requires-body=true, max-size=131072, timeout=10

[MITM]
hostname = mobile-api.adguard.org
enable = true
